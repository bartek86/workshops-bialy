%p#notice= notice
%p#error= flash[:error]
.col-md-11
  %div.panel.panel-default
    .panel-heading
      %h3
        Title:
        %b= product.title
    .panel-body.color-body
      
      .row
        %div.col-md-4.well.well-sm
          %p
            %b Price:
            = product.price
        
          %p
            %b Category:
            = link_to product.category.name, category_path(product.category.id)
          %p
            %b Average rating
            %span.badge.badge-rating
              %span.glyphicon.glyphicon-star  
              = product.average_rating
                
        %div.col-md-8
          %p
            %b Description:
          = product.description
          
      = link_to 'Back', category_path(category.id), class: 'btn btn-primary'
      -if auth_user
        = link_to 'Edit product', edit_category_product_path(category.id, product.id), class: 'btn btn-primary'
    

.col-md-11
  .row
    .col-md-6
      %div.panel.panel-default
        .panel-heading
          %h3 
            Reviews
            %span.badge.badge-count
              = reviews.count
        .panel-body
          = render reviews
    .col-md-1
    .col-md-5
      - if user_signed_in?
        %div.panel.panel-default
          .panel-heading
            %h3 Add review
          .panel-body.color-body
            = render 'reviews/form'

  = link_to 'Back', category_path(category.id), class: 'btn btn-primary'
